{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}| Ajout Auteur
{% endblock %}


{% block body %}
{{parent()}}
<div class="container-fluid">
	<div class="row justify-content-center">
		<h1 class="text-center text-primary p-4">Ajout d'un auteur</h1>
	</div>
	<div class="row justify-content-center">
		<div class="col-8 bg-white p-4 m-0 text-dark">
			{{ form_start(form) }}
			<div class="form-group">
				{{ form_label(form.nom, 'Le nom de l\'auteur (s\'il ou elle possède plusieurs patronymes, les mettre à la suite)', {'label_attr': {'class': 'font-weight-bold'}}) }}
					<small><span class="badge badge-info">{{ form_help(form.nom) }}</span></small>
				{{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="form-group">
				{{ form_label(form.prenom, 'Le prénom de l\'auteur', {'label_attr': {'class': 'font-weight-bold'}}) }}
					<small><span class="badge badge-info">{{ form_help(form.nom) }}</span></small>
					{{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group">
					{{ form_label(form.dateNaissance, 'La date de naissance de l\'auteur', {'label_attr': {'class': 'font-weight-bold'}}) }}
					<small><span class="badge badge-info">{{ form_help(form.nom) }}</span></small>
				{{ form_widget(form.dateNaissance, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="form-group">
				{{ form_label(form.dateDeces, 'La date de décès de l\'auteur (laisser vide s\'il ou elle n\'est pas mort)', {'label_attr': {'class': 'font-weight-bold'}}) }}
				{{ form_widget(form.dateDeces, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="form-group">
				{{ form_label(form.bioCourte, 'Biographie courte de l\'auteur', {'label_attr': {'class': 'font-weight-bold'}}) }}
					<small><span class="badge badge-info">{{ form_help(form.nom) }}</span></small>
					{{ form_widget(form.bioCourte, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group">
					{{ form_label(form.bioLongue, 'Biographie longue de l\'auteur', {'label_attr': {'class': 'font-weight-bold'}}) }}
				{{ form_widget(form.bioLongue, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="form-group">
				{{ form_label(form.oeuvresExt, 'Les oeuvres de l\'auteur qui ne sont pas sur la plateforme', {'label_attr': {'class': 'font-weight-bold'}}) }}
					{{ form_widget(form.oeuvresExt, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group">
					{{ form_label(form.liensWeb, 'Les liens externes relatifs à l\'auteur (site internet personnel, blog, etc)', {'label_attr': {'class': 'font-weight-bold'}}) }}
				{{ form_widget(form.liensWeb, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="form-group">
				{{ form_label(form.image, 'Image pricipale de l\'auteur', {'label_attr': {'class': 'font-weight-bold'}}) }}  
					<small><span class="badge badge-info">{{ form_help(form.nom) }}</span></small>                  
                    {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}       
                </div>
				<div class="form-group mx-auto text-center">
					{{ form_widget(form.send, { 'label': "Enregistrer", 'attr': {'class': 'btn font-weight-bold bg-primary text-white mx-auto text-center'}}) }}
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
