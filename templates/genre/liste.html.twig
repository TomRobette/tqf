{% extends 'base.html.twig' %}

{% block title %}
	{{ parent()}}| Liste Genres
{% endblock %}

{% block body %}
	{{ parent()}}
	<div class="container-fluid">
		<div class="row justify-content-center">
			<h1 class="text-center text-primary p-4">Liste des Genres littéraires et artistiques</h1>
		</div>
		<div class="row justify-content-center">
			<div class="col-8 bg-white p-4 m-0 text-dark">
				<table class="table table-hover">
					<thead>
						<tr>
							<th scope="col">N°</th>
							<th scope="col">Libelle</th>
							<th scope="col"></th>
						</tr>
					</thead>
					<tbody>

						{% for genre in genre %}
							<tr class="{{ cycle(['table-info', 'table-light'], loop.index0)}}">

								<td>{{genre.id}}</td>
								<td>{{genre.libelle}}</td>
								<td>
									<a href="{{path('listeGenres',{'supp':genre.id})}}">
										<span class="material-icons text-dark" title="Supprimer le genre">delete</span>
									</a>
								</td>

							</tr>
						{% endfor %}
					</tbody>
				</div>
			</div>
		</div>
	{% endblock %}
